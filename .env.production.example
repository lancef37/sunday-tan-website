# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Atlas or Railway MongoDB connection string
# Replace with your actual MongoDB connection string
MONGODB_URI=your-mongodb-connection-string-here

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate a secure random string (at least 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-production-jwt-secret-here

# Admin password hash (use bcrypt)
# Generate with: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH=$2a$10$your-production-password-hash

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Railway will automatically set PORT
# PORT=3000

# CORS Configuration
ALLOWED_ORIGINS=https://sunday-tan-website.vercel.app
NODE_ENV=production

# ===========================================
# TEXTMAGIC SMS SERVICE (TEST MODE)
# ===========================================
# Keep in test mode for now
TEXTMAGIC_TEST_MODE=true
TEXTMAGIC_USERNAME=your-textmagic-username
TEXTMAGIC_API_KEY=your-textmagic-api-key
TEXTMAGIC_PHONE_NUMBER=+1234567890
ADMIN_PHONE=+1234567890

# Custom SMS messages (optional)
SMS_CONFIRMATION_MESSAGE=Your appointment at Sunday Tan has been confirmed for {date} at {time}. Reply STOP to opt out.
SMS_DENIAL_MESSAGE=Unfortunately, we cannot accommodate your requested appointment time. Please visit our website to select another time.
SMS_ADMIN_NOTIFICATION=New booking request from {client} for {date} at {time}. Check admin panel.

# ===========================================
# SQUARE PAYMENT PROCESSING (SANDBOX MODE)
# ===========================================
# Keep in sandbox mode for testing
SQUARE_ENABLED=true
SQUARE_ENVIRONMENT=sandbox
SQUARE_ACCESS_TOKEN=your-square-sandbox-access-token
SQUARE_LOCATION_ID=your-square-sandbox-location-id
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key

# Square Subscription Settings (for membership)
SQUARE_SUBSCRIPTION_PLAN_ID=your-subscription-plan-id
SQUARE_CATALOG_VERSION=your-catalog-version

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# For password recovery and notifications
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Or use custom SMTP
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-password

# ===========================================
# FRONTEND URLS
# ===========================================
# These are used by the backend for generating links
FRONTEND_URL=https://sunday-tan-website.vercel.app
API_BASE_URL=https://sunday-tan-website-production.up.railway.app

# ===========================================
# OPTIONAL FEATURES
# ===========================================
# Rate limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# Session timeout (in milliseconds)
SESSION_TIMEOUT=604800000  # 7 days

# Enable detailed logging
DEBUG_MODE=false

# Timezone (for appointment scheduling)
TZ=America/Los_Angeles