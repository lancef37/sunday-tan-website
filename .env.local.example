# Local Development Environment Configuration
# Copy this file to .env.local for local development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/sunday-tan

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# For local development, can use a simpler secret
JWT_SECRET=dev-secret-key-change-in-production

# Admin password hash (default password: "admin123")
# Generate new hash with: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH=$2a$10$N9qo8uLOickgx2ZMRZoMye.IjQ0JwDfKEwD8lj9yDN7Dn5JBMzK5y

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development

# Frontend URLs for local development
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# CORS (allow localhost in development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# TEXTMAGIC SMS SERVICE (TEST MODE)
# ===========================================
# Use test mode for development
TEXTMAGIC_TEST_MODE=true
TEXTMAGIC_USERNAME=test-username
TEXTMAGIC_API_KEY=test-api-key
TEXTMAGIC_PHONE_NUMBER=+15551234567
ADMIN_PHONE=+15551234567

# Test SMS messages
SMS_CONFIRMATION_MESSAGE=[TEST] Your appointment has been confirmed for {date} at {time}.
SMS_DENIAL_MESSAGE=[TEST] Your appointment request could not be accommodated.
SMS_ADMIN_NOTIFICATION=[TEST] New booking from {client} for {date} at {time}.

# ===========================================
# SQUARE PAYMENT PROCESSING (SANDBOX MODE)
# ===========================================
# Use sandbox for development
SQUARE_ENABLED=true
SQUARE_ENVIRONMENT=sandbox
SQUARE_ACCESS_TOKEN=EAAAEE...your-sandbox-token
SQUARE_LOCATION_ID=L...your-sandbox-location
SQUARE_WEBHOOK_SIGNATURE_KEY=your-sandbox-webhook-key

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# For local testing, you can use a service like Mailtrap
EMAIL_SERVICE=gmail
EMAIL_USER=test@example.com
EMAIL_PASSWORD=test-password

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug logging
DEBUG_MODE=true

# Disable rate limiting for development
RATE_LIMIT_MAX=1000

# Shorter session for testing
SESSION_TIMEOUT=86400000  # 1 day

# Local timezone
TZ=America/Los_Angeles